{
  "manifest_version": 3,
  "name": "Mental Deloadr",
  "description": "Capture tasks and workspace context for later resumption.",
  "version": "0.1.0",
  "action": {
    "default_title": "New Task Capture"
  },
  "permissions": [
    "tabs",
    "tabGroups",
    "windows",
    "history",
    "cookies",
    "storage",
    "activeTab",
    "scripting",
    "alarms"
  ],
  "host_permissions": ["<all_urls>", "http://localhost:8787/*"],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "incognito": "split"
}
